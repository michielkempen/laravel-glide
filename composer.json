{
    "name": "michielkempen/laravel-glide",
    "description": "Leverage Glide to perform on the fly image manipulations in Laravel.",
    "keywords": [
        "Michiel Kempen",
        "Glide",
        "Laravel"
    ],
    "homepage": "https://github.com/michielkempen/laravel-glide",
    "license": "MIT",
    "authors": [
        {
            "name": "Michiel Kempen",
            "email": "kempenmichiel@gmail.com",
            "homepage": "https://michielkempen.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "illuminate/support": "^5.5|^6.0|^7.0|^8.0",
        "illuminate/http": "^5.5|^6.0|^7.0|^8.0",
        "league/glide-laravel": "^1.0"
    },
    "autoload": {
        "files" : [
            "src/helpers.php"
        ],
        "psr-4": {
            "MichielKempen\\LaravelGlide\\": "src"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "MichielKempen\\LaravelGlide\\GlideServiceProvider"
            ]
        }
    }
}
